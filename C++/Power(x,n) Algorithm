#include <iostream>
using namespace std;
double power(double x, int n) {
    double result = 1.0;
    int exponent = n;
    if (n < 0) {
        x = 1 / x;
        exponent = -n;
    }
    
    while (exponent > 0) {
        if (exponent % 2 == 1) {
            result *= x;
        }
        x *= x;
        exponent /= 2;
    }
    
    return result;
}

int main() {
    double base;
    int exponent;
    cout << "Enter the base: ";
    cin >> base;
    cout << "Enter the exponent: ";
    cin >> exponent;
    
    double result = power(base, exponent);
    cout << base << " raised to the power " << exponent << " is: " << result << endl;
    
    return 0;
}
